{
  "display": "Node 18",
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",

    "noImplicitAny": true,
    "removeComments": true,

    "outDir": "./dist"
  },
  "include": [
    "./src",
    "./tests"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
